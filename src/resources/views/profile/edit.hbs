<div class="mt-4">
    <form method="POST" action="/profile/{{ course._id }}?_method=PUT">
        <input class="form-control mt-4" type="text"  value="{{ course.name }}"   placeholder="name" id="name" name="name" >
        <input class="form-control mt-4" type="number"  value="{{ course.age }}"  placeholder="age" id="age" name="age" >
        <input class="form-control mt-4" type="text"  value="{{ course.occupation }}"  placeholder="occupation" id="occupation" name="occupation">
        <button type="submit" class="btn btn-primary mt-4">Edit</button>
    </form>
</div>


